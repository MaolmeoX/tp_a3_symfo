{% extends 'base.html.twig' %}

{% block body %}
    <h1>Houses list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Address</th>
                <th>Title</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for house in houses %}
            <tr>
                <td><a href="{{ path('house_show', { 'id': house.id }) }}">{{ house.id }}</a></td>
                <td>{{ house.address }}</td>
                <td>{{ house.title }}</td>
                <td>{{ house.description }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('house_show', { 'id': house.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('house_edit', { 'id': house.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('house_new') }}">Create a new house</a>
        </li>
    </ul>
{% endblock %}
